              <a href="/pages/contact" class="footer-link-block w-inline-block">
                <div>contact</div>
              </a>
            </div>
          </div>
          <div class="footer-newsletter-wrapper">
            <div class="footer-form-block w-form">

              {% form 'customer' %}
              {% if form.posted_successfully? %}
                <div class="jc-form-done">
                  <div>Thank you! Your subscription has been confirmed!</div>
                </div>
              {% else %}
              <input type="hidden" name="contact[accepts_marketing]" value="true">
                <div class="footer-newsletter-flex-row">
                  <div class="footer-newsletter-flex-col">
                    <div class="footer-newsletter-heading">Subscribe to Our Newsletter</div><input type="email" class="footer-form-input w-input" maxlength="256" name="contact[email]" data-name="Email 2" placeholder="email address" id="email" required=""></div>
                  <div class="footer-newsletter-flex-col-right">
                    <div class="footer-newsletter-btn-holder"><input type="submit" value=" " class="footer-newsletter-btn w-button"><img src="//cdn.shopify.com/s/files/1/2534/9108/files/newsletter-white-min.png" alt="Envelope Send" class="footer-newsletter-img"></div>
                  </div>
                </div>
                {% endif %}
              {% endform %}

              <div class="w-form-done">
                <div>Thank you! Your submission has been received!</div>
              </div>
              <div class="w-form-fail">
                <div>Oops! Something went wrong while submitting the form.</div>
              </div>
            </div>
          </div>
        </div>
        <div class="footer-col-right w-col w-col-4">
          <div class="footer-col-heading">Customer Care</div>
          <div class="footer-link-wrapper">
            {% if customer %}
              <a href="/account" class="footer-link-block w-inline-block">
                <div>my account</div>
