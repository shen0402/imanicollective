<div class="modal-intern-wrapper">
  <div class="modal-content-wrapper-form">
    <div class="modal-intern-content-inner-form">
      <div class="modal-intern-form-block w-form">

        {% form 'contact' %}
        {% if form.posted_successfully? %}
          <div class="jc-form-done">
            <div>Thank you! Your submission has been received!</div>
          </div>
        {% else %}
        <input type="hidden" name="contact[form-name]" value="Internship Application Form">
          <div class="modal-form-heading-form">Career Application</div>
          <div class="modal-form-group w-row">
            <div class="modal-form-col w-col w-col-6"><input type="text" class="modal-form-input w-input" maxlength="256" name="contact[Name]" data-name="Name" placeholder="Name*" id="Name" required=""></div>
            <div class="modal-form-col w-col w-col-6"><input type="email" class="modal-form-input w-input" maxlength="256" name="contact[email]" data-name="email" placeholder="Email Address*" id="Email" required=""></div>
          </div>
          <div class="modal-intern-form-group w-row">
            <div class="modal-form-col w-col w-col-6"><input type="text" class="modal-form-input modal-intern-form-input w-input" maxlength="256" name="contact[Phone-Number]" data-name="Phone Number" placeholder="Phone Number" id="Phone-Number"></div>
            <div class="modal-form-col w-col w-col-6">
              <div class="modal-intern-flex-heading">Where are you interested in interning?</div>
              <div class="modal-intern-checkbox-flex-row"><label class="w-checkbox modal-intern-checkbox-field"><input type="checkbox" id="Kenya" name="contact[Kenya]" data-name="Kenya" class="w-checkbox-input"><span for="Kenya" class="modal-intern-label w-form-label">Kenya</span></label><label class="w-checkbox modal-intern-checkbox-field"><input type="checkbox" id="Dallas" name="contact[Dallas]" data-name="Dallas" class="w-checkbox-input"><span for="Dallas" class="modal-intern-label w-form-label">Dallas</span></label></div>
            </div>
          </div>
          <div class="modal-input-wrapper"><textarea data-name="Message" maxlength="5000" id="Message" name="contact[Message]" placeholder="Tell us about yourself (passions, skillset, what you are eager to learn, etc.): " required="" class="modal-form-input modal-form-input-area w-input"></textarea></div>
          <div class="modal-btn-wrapper"><input type="submit" value="Submit" data-wait="Please wait..." class="modal-form-btn w-button"></div>
          {% endif %}
        {% endform %}

        <div class="w-form-done">
          <div>Thank you! Your submission has been received!</div>
        </div>
        <div class="w-form-fail">
          <div>Oops! Something went wrong while submitting the form.</div>
        </div>
      </div>
    </div><a href="#" class="modal-close-btn-form" data-ix="modal-form-intern-close">X</a></div>
</div>

<script>

  $('.modal-form-open').click(function(e) {
    e.preventDefault();
  $('body').css('overflow', 'hidden');
  });

  $('.modal-close-btn-form').click(function(e) {
    e.preventDefault();
  $('body').css('overflow', 'auto');
  });

</script>


{% schema %}
  {
    "name": "Intern Pop-Up Form" 
      
  }
{% endschema %}