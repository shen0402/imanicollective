{% if product.metafields.custom.feature_image != blank %}
  <div class="prduct-features">
    {% if section.settings.heading != blank %}
      <h3 class="mid-heading-internal" style="margin-bottom: 0;">
        {{ section.settings.heading }}
      </h3>
    {% endif %}
    <div class="container-mid">
      <div class="prduct-features__image">
        {{ product.metafields.custom.feature_image | img_url: '1400x' | img_tag }}
      </div>
    </div>
  </div>
{% endif %}
{% schema %}
  {
    "name": "Product features",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "features + specs"
      }
    ]
  }
{% endschema %}