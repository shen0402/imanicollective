<div class="ethically-made-empowered-section">
  <div class="center-text-wrapper">
    <h2 class="smaller-h2">{{ section.settings.heading }}</h2>
  </div>
  <div class="flex-row-ethically-made">
    {% for block in section.blocks %}
      <div class="flex-col-ethically-made"><img
          src="{{ block.settings.image | img_url: '450x' }}"
          loading="lazy"
          sizes="(max-width: 479px) 100vw, 49vw"
          alt=""
          class="ethically-img-bck">
        <a href="{{ block.settings.button_link }}" class="general-btn relative shorter w-inline-block"><img
            src="{{ 'pink-btn.png' | asset_img_url: '250x' }}"
            loading="lazy"
            sizes="(max-width: 479px) 190px, (max-width: 767px) 27vw, 190px"

            alt=""
            class="btn-img">
          <div class="btn-text">{{ block.settings.button_label }}</div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Collection List",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "ethically made by empowered artisans in Kenya"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Collection List"
      }
    ]
  }
{% endschema %}