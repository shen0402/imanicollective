<div class="cta-section-experience" {% if section.settings.main_image %}style="background-image: url('{{ section.settings.main_image | img_url: '1600x' }}');"{% endif %}>
  <div class="container-large">
    <div class="cta-content-wrapper-experience">
      <p class="cta-heading-experience">{{section.settings.main_heading}}</p>
      <div class="cta-btn-wrapper"><a href="#" class="btn-main w-button modal-form-open" data-ix="modal-form-open">Request More Information</a></div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "CTA Section" ,
      "settings": [
        {
           "type": "text",
           "id": "main_heading",
           "label": "Heading Text"
        },
         {
            "type": "image_picker",
            "id": "main_image",
            "label": "Background Image"
         }
    ]
  }
{% endschema %}