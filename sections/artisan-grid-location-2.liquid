        },
        
        {
          "label": "Year Started",
          "id": "artisan_year_started",
          "type": "text"
        },
        {
          "label": "Holistic Program",
          "id": "artisan_holistic_program",
          "type": "text"
        },
        {
          "label": "Skill Learned",
          "id": "artisan_skill",
          "type": "text"
        },
        {
          "label": "Dream Destination",
          "id": "artisan_dream_destination",
          "type": "text"
        },
        {
          "label": "Hobby",
          "id": "artisan_hobby",
          "type": "text"
        },
        {
          "label": "Words to live by",
          "id": "artisan_words_to_live",
          "type": "text"
        },
        {
          "label": "Years With Imani",
          "id": "years_with_imani",
          "type": "text"
        },
        {
          "label": "Family",
          "id": "artisan_family",
          "type": "text"
        },
        
        {
          "label": "Fun Fact",
