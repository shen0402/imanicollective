<div class="info-header-wrapper">
  <div class="center-text-wrapper margin-bottom-large">
    <h1>{{ section.settings.heading }}</h1>
  </div>
</div>
<div class="two-col-side-section">
  <div class="two-col-flex-row">
    <div class="info-links-grid">
      <a href="/pages/contact" class="info-link-block w-inline-block">
        <div>get in touch</div>
      </a>
      <a href="/pages/shipping-returns" class="info-link-block w-inline-block">
        <div>shippingÂ + returns</div>
      </a>
      <a href="/pages/faqs" class="info-link-block w-inline-block">
        <div>F.A.Q.s</div>
      </a>
      <a
        href="/pages/product-care"
        aria-current="page"
        class="info-link-block w-inline-block w--current">
        <div>product care</div>
      </a>
      <a href="/pages/privacy-policy" class="info-link-block w-inline-block">
        <div>privacy policy</div>
      </a>
    </div>
    <div class="info-flex-col">
      {% for block in section.blocks %}
        <div class="product-info-wrapper">
          <div class="big-medium-text margin-b-15">
            {{ block.settings.heading }}
          </div>
          <div class="general-text">
            {{ block.settings.description }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Product Care",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "how to care for your Imani products"
      }
    ],
    "blocks": [
      {
        "type": "item",
        "name": "Item",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }, {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Product Care"
      }
    ]
  }
{% endschema %}