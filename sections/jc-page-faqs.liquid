<div class="info-header-wrapper">
  <div class="center-text-wrapper margin-bottom-large">
    <h1>frequently asked questions</h1>
  </div>
</div>
<div class="two-col-side-section">
  <div class="two-col-flex-row">
    <div class="info-links-grid">
      <a href="/pages/contact" class="info-link-block w-inline-block">
        <div>get in touch</div>
      </a>
      <a href="/pages/shipping-returns" class="info-link-block w-inline-block">
        <div>shippingÂ + returns</div>
      </a>
      <a
        href="/pages/faqs"
        aria-current="page"
        class="info-link-block w-inline-block w--current">
        <div>F.A.Q.s</div>
      </a>
      <a href="/pages/product-care" class="info-link-block w-inline-block">
        <div>product care</div>
      </a>
      <a href="/pages/privacy-policy" class="info-link-block w-inline-block">
        <div>privacy policy</div>
      </a>
    </div>
    <div class="info-flex-col">
      <div class="faq-top-wrapper">
        <div class="general-text margin-b-15">{{ section.settings.heading }}</div>
      </div>
      {% for block in section.blocks %}
        <div class="faq-individual">
          <h2 class="margin-b-15">{{ block.settings.question }}</h2>
          <div class="general-text">{{ block.settings.answer }}</div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "FAQs",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Here to answer your most frequently asked questions!"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "Faq",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          }, {
            "type": "richtext",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "FAQs"
      }
    ]
  }
{% endschema %}