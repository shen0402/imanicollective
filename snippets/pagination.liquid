<div class="jc-list-inline-pagination">
  {% unless paginate.previous.is_link %}

    <a href="{{ paginate.previous.url }}" class="jc-paginate-btn">
      <img src="https://cdn.shopify.com/s/files/1/2534/9108/files/shop_-_all_products_arrow_icon_left.png?v=1678980373" class="jc-paginate-arrow">
    </a>

  {% else %}

    <a href="{{ paginate.previous.url }}" class="jc-paginate-btn">
      <img src="https://cdn.shopify.com/s/files/1/2534/9108/files/shop_-_all_products_arrow_icon_left.png?v=1678980373" class="jc-paginate-arrow">
    </a>

  {% endunless %}
  <div class="jc-pagination__text">
    {{ 'general.pagination.current_page' | t: current: paginate.current_page, total: paginate.pages }}
  </div>
  {% unless paginate.next.is_link %}

    <a href="{{ paginate.next.url }}" class="jc-paginate-btn">
      <img src="https://cdn.shopify.com/s/files/1/2534/9108/files/shop_-_all_products_arrow_icon_5ac8bc0f-5b07-40ed-928b-31e2a9458150.png?v=1678980372" class="jc-paginate-arrow">
    </a>

  {% else %}

    <a href="{{ paginate.next.url }}" class="jc-paginate-btn">
      <img src="https://cdn.shopify.com/s/files/1/2534/9108/files/shop_-_all_products_arrow_icon_5ac8bc0f-5b07-40ed-928b-31e2a9458150.png?v=1678980372" class="jc-paginate-arrow">
    </a>

  {% endunless %}
</div>